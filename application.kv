Screen_Manager:
	FirstScreen:

<FirstScreen>:
    id: calculator
    display: entry


    FloatLayout:
        canvas.before:
            Color:
                rgba: 0, 0, 1, .3
            Rectangle:
                size: self.size
                pos: self.pos
        canvas:
            Color
                rgba: 0,0,0,1
            Line:
                width: 1.2
                rectangle: self.x+1, self.y, 800, 533
            Line:
                width: 1.2
                rectangle: self.x+800, self.y, 562, 533
        BoxLayout:
            TextInput
                id: entry
                text: ''
                font_size: 70
                size_hint:1, .25
                pos_hint:{'x': 0, 'y':.75}
        Button:
            font_size: 70
            text: 'AC'
            pos_hint: {'x': 0, 'y':.6}
            size_hint: .293, .15
            on_press: entry.text = ''
        Button:
            font_size: 70
            text: 'Clear'
            pos_hint: {'x': .293, 'y':.6}
            size_hint: .293, .15
            on_press: entry.text = entry.text[:-1]
        Button:
            font_size: 70
            text: '1'
            pos_hint: {'x': 0, 'y':.45}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '2'
            pos_hint: {'x':.1953 , 'y':.45}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '3'
            pos_hint: {'x': .3906, 'y':.45}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '4'
            pos_hint: {'x': 0, 'y':.3}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '5'
            pos_hint: {'x':.1953 , 'y':.3}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '6'
            pos_hint: {'x': .3906, 'y':.3}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '7'
            pos_hint: {'x': 0, 'y':.15}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '8'
            pos_hint: {'x':.1953 , 'y':.15}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '9'
            pos_hint: {'x': .3906, 'y':.15}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '.'
            pos_hint: {'x': 0, 'y':0}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '0'
            pos_hint: {'x': .1953, 'y':0}
            size_hint: .1953, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '='
            pos_hint: {'x': .3906, 'y':0}
            size_hint: .1953, .15
            on_press: calculator.calculate(entry.text)
        Button:
            font_size: 70
            text: '%'
            pos_hint: {'x': .587, 'y':.6}
            size_hint: .411, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '\N{DIVISION SIGN}'
            pos_hint: {'x': .587, 'y':.45}
            size_hint: .411, .15
            on_press: entry.text += '/'
        Button:
            font_size: 70
            text: 'x'
            pos_hint: {'x': .587, 'y':.3}
            size_hint: .411, .15
            on_press: entry.text += '*'
        Button:
            font_size: 70
            text: '-'
            pos_hint: {'x': .587, 'y':.15}
            size_hint: .411, .15
            on_press: entry.text += self.text
        Button:
            font_size: 70
            text: '+'
            pos_hint: {'x': .587, 'y':0}
            size_hint: .411, .15
            on_press: entry.text += self.text